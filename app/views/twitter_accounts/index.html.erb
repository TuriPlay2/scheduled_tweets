<div class="d-flex aling-items-center justify-content-center">
	<h1>Twitter Accounts</h1>
</div>

<div class="d-flex aling-items-center justify-content-center">
	<%= link_to "Connect a Twitter account", "/auth/twitter", method: :post, class:"btn btn-outline-primary" %>
</div>

<h1>
	<div>
	
</div>
		
<% @twitter_accounts.each do |twitter_account| %>	
	
		<div class="d-flex aling-items aling-items-center ">
			<div class="me-3">
				<%= image_tag twitter_account.image, class: "rounded-circle" %>	
				<%= link_to "@#{twitter_account.username}","https://twitter.com/#{twitter_account.username}", target: :_blank, class:"btn btn-outline-info"%>
			</div>
				<%= button_to "Disconnect", twitter_account, method: :delete, data: {confirm: "Are you sure ?"}, class:"btn btn-danger" %>	
		
		</div>

<% end %>
	