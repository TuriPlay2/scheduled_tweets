<h1>Esqueceu sua Senha ?</h1>

<%= form_with  url: password_reset_path do |form| %>

	<div class="mb-3 row">
		<%= form.label :email %>
		<%= form.text_field :email, class:"form-control", placeholder: "exemple:yuri@gmail.com" %>
	</div>

	<div class="mb-3 row">
	 <%= form.submit "Reset Password", class:"btn btn-primary" %>
    </div>


<% end %>